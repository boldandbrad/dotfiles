[user]
	name = Bradley Wojcik
	email = bradleycwojcik@gmail.com
[init]
	defaultBranch = main
	templateDir = ~/.config/git/templates
[core]
	eol = lf
	autocrlf = input
	editor = codium --wait
	excludesfile = ~/.config/git/gitignore
[alias]
	a = add
	aa = add --all
	br = checkout -b
	cm = commit -m
	co = checkout
	st = status -s
	df = difftool
	mg = mergetool
	r = reset HEAD
[fetch]
	prune = true
[pull]
	rebase = true
[rebase]
	autosquash = true
[merge]
	ff = only
	tool = codium
[mergetool "codium"]
	cmd = codium --wait --merge $REMOTE $LOCAL $BASE $MERGED
[diff]
	tool = codium
[difftool]
	prompt = false
[difftool "codium"]
	cmd = codium --wait --diff $LOCAL $REMOTE
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[push]
	autoSetupRemote = true
