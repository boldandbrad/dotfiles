[user]
	name = Bradley Wojcik
	email = bradleycwojcik@gmail.com
[init]
	defaultBranch = main
	templateDir = ~/.config/git/templates
[core]
	eol = lf
	autocrlf = input
	editor = nvim
	pager = delta
	excludesfile = ~/.config/git/gitignore
[alias]
	a = add
	aa = add --all
	br = checkout -b
	cm = commit -m
	ca = commit -a --amend --no-edit
  co = checkout
	sw = switch
	st = status -s
	ft = fetch
	pl = pull
	pr = pull --rebase
	ps = push
	df = diff
	dt = difftool
	mg = merge
	mt = mergetool
	rs = reset HEAD
[fetch]
	prune = true
[push]
	autoSetupRemote = true
[pull]
	rebase = true
[rebase]
	autosquash = true
[merge]
	ff = only
	tool = codium
	conflictsytle = diff3
[mergetool "codium"]
	cmd = codium --wait --merge $REMOTE $LOCAL $BASE $MERGED
[interactive]
	diffFilter = delta --color-only
[diff]
	tool = codium
	colorMoved = default
[difftool]
	prompt = false
[difftool "codium"]
	cmd = codium --wait --diff $LOCAL $REMOTE
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[delta]
    navigate = true    # use n and N to move between diff sections
		line-numbers = true
		# side-by-side = true
