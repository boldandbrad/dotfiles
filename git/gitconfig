[user]
	name = Bradley Wojcik
	email = bradleycwojcik@gmail.com
[init]
	defaultBranch = main
[core]
	eol = lf
	autocrlf = input
	editor = code --wait
	excludesfile = ~/.gitignore
[alias]
	aa = add --all
	cm = commit -m
	co = checkout
	st = status -s
	df = difftool
	mg = mergetool
[fetch]
	prune = true
[pull]
	rebase = true
[rebase]
	autosquash = true
[merge]
	ff = only
	tool = codium
[mergetool "codium"]
	cmd = codium --wait $MERGED
[diff]
	tool = codium
[difftool]
	prompt = false
[difftool "codium"]
	cmd = codium --wait --diff $LOCAL $REMOTE
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
