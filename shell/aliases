
# tool replacements

alias cat="bat"
alias code="codium"
alias ls="exa --classify"
alias la="exa -a --classify"
alias ll="exa -al --classify"

# navigation

alias ..="cd .."
alias ...="cd ../.."
alias -- -="cd -"
alias ap="cd /Applications"
alias dc="cd ~/Documents"
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias dv="cd ~/Developer"
alias dots="cd $DOTFILES"

# other shortcuts

alias mkdir="mkdir -pv"
alias mv="mv -iv"
alias cp="cp -Riv"
alias tree="tree -C"
alias cwd='pwd | pbcopy'

# dotfile refresh
alias dotbot="dotbot -c $DOTFILES/install.conf.yaml"

# gh repo clone refresh
alias clone="source $DOTFILES/gh/install.zsh"

# pretty print PATH
alias path='echo $PATH | tr -s ":" "\n"'

# open pwd in Finder
alias finder='open .'

# quicklook from the terminal
alias ql="qlmanage -p ${@} > /dev/null 2> /dev/null"

# uninstall an app with appcleaner
alias uninstall='open -a AppCleaner'

# python

# activate python venv in the current directory
alias pysrc='source .venv/bin/activate'
